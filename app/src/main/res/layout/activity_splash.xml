<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <com.example.todaynews.FullScreenVideoView
        android:id="@+id/vv_play"
        style="@style/style_videoview"/>

    <TextView
        android:id="@+id/tv_splash_timer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/string_splash_textview_text"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shape_splash_tv"
        android:padding="5dp"/>

</FrameLayout>